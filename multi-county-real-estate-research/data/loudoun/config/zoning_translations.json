  "dynamic_patterns": {
    "R-{n}": {
      "pattern": "^R-?(\\d+)$",
      "template": "Residential ({n} homes/acre allowed)",
      "description_template": "Residential zone allowing up to {n} dwelling units per acre"
    },
    "PDH-{n}": {
      "pattern": "^PDH-?(\\d+)$",
      "template": "Planned neighborhood (up to {n} homes/acre)",
      "description_template": "Master-planned residential community at {n} units per acre max"
    },
    "CR-{n}": {
      "pattern": "^CR-?(\\d+)$",
      "template": "Countryside residential ({n}-acre lots)",
      "description_template": "Countryside residential with {n}-acre minimum lot size"
    },
    "A-{n}": {
      "pattern": "^A-?(\\d+)$",
      "template": "Agricultural ({n}-acre minimum lots)",
